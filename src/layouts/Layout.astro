---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio Pablo Abreu" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/img/PA-logo.jpeg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Abel&family=Inconsolata:wght@200..900&family=Kode+Mono:wght@400..700&family=Tiro+Devanagari+Sanskrit:ital@0;1&display=swap");

  code {
    font-family: "Abel", sans-serif;
  }

  html {
    background-image: linear-gradient(
      180deg,
      #111827 0%,
      #111827 30%,
      #12337b 50%,
      #111827 70%,
      #111828 100%
    );

    scroll-behavior: smooth;
  }
</style>
